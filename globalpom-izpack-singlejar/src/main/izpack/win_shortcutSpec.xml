<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">
    <skipIfNotSupported />
    <programGroup defaultName="${project.custom.app.name}"
        location="startMenu" />
    <shortcut
       name="Start ${project.custom.app.name}"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="yes"
     startup="no"
     target="&quot;${INSTALL_PATH}&quot;/bin/windows/${project.custom.app.windowsbin}"
     commandLine=""
     workingDirectory="$INSTALL_PATH"
     description="Start ${project.custom.app.name}. ${project.custom.app.description}"
     type="Application"
     encoding="UTF-8"
     terminal="false"
     KdeSubstUID="false"
     initialState="normal"
     iconFile="&quot;${INSTALL_PATH}&quot;/${project.custom.app.icon.windows}">
        <createForPack name="Windows" />
    </shortcut>
    <shortcut
       name="Debug ${project.custom.app.name}"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="yes"
     startup="no"
     target="&quot;${INSTALL_PATH}&quot;/bin/windows/${project.custom.app.windowsdebugbin}"
     commandLine=""
     workingDirectory="&quot;${INSTALL_PATH}&quot;"
     description="Start debug mode of ${project.custom.app.name}. ${project.custom.app.description}"
     type="Application"
     encoding="UTF-8"
     terminal="true"
     KdeSubstUID="false"
     initialState="normal"
     iconFile="&quot;${INSTALL_PATH}&quot;/${project.custom.app.icon.windows}">
        <createForPack name="Windows" />
    </shortcut>
    <shortcut
       name="Readme file"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="yes"
     startup="no"
     target="&quot;${INSTALL_PATH}&quot;\doc\en\readme.txt"
     commandLine=""
     workingDirectory="$INSTALL_PATH\doc\en"
     description="${project.custom.app.name} readme file"
     type="Link"
     encoding="UTF-8">
    </shortcut>
    <shortcut
       name="Liemich Datei"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="yes"
     startup="no"
     target="&quot;${INSTALL_PATH}&quot;\doc\de\readme.txt"
     commandLine=""
     workingDirectory="&quot;${INSTALL_PATH}&quot;\doc\de"
     description="${project.custom.app.name} liesmich Datei"
     type="Link"
     encoding="UTF-8">
    </shortcut>
</izpack:shortcuts>
